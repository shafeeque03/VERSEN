<%- include("../user/layouts/userheader") %>
    <!-- Header Section End -->

    <!-- Shop Details Section Begin -->
    <section class="shop-details">
        <div class="product__details__pic">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product__details__breadcrumb">
                            <a href="./index.html">Home</a>
                            <a href="./shop.html">Shop</a>
                            <span>Product Details</span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3 col-md-3">
                        <ul class="nav nav-tabs" role="tablist">
                            <% for(let i=0 ; i < product.image.length ; i++) { %>
                                <li class="nav-item">
                                    <a class="nav-link <% if (i === 0) { %>active<% } %>" data-toggle="tab"
                                        href="#tabs-<%= i + 1 %>" role="tab">
                                        <div class="product__thumb__pic">
                                            <img src="/adminassets/productImages/<%= product.image[i] %>">
                                        </div>
                                    </a>
                                </li>
                                <% } %>
                        </ul>
                    </div>
                    <div class="col-lg-6 col-md-9">
                        <div class="tab-content" style="margin-top: 50px;">
                            <% for(let i=0 ; i < product.image.length ; i++) { %>
                                <div class="tab-pane <% if (i === 0) { %>active<% } %>" id="tabs-<%= i + 1 %>"
                                    role="tabpanel">
                                    <div class="product__details__pic__item">
                                        <img src="/adminassets/productImages/<%= product.image[i] %>" alt="">
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="product__details__content">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <div class="product__details__text">
                            <h4><%=product.name%></h4>
                            <% if(product.isOffer){ %>
                                <% var off = product.oldPrice-product.price %>
                            <h4>₹<del><%=product.oldPrice%></del></h4>
                            <h4 class="mb-0"> ₹ <%= product.price %> <span class="badge" style="font-size: medium; background: linear-gradient(to right, rgb(39, 157, 6), rgb(108, 182, 87)); color: white;"> Save ₹ <%= off %> %> </span></h5>

                            <% }else{ %>

                                <% } %>
                            <p><%= product.description %></p>
                            <% if(product.stock==0){ %>
                            <div class="product__details__cart__option">
                               
                                <!-- <a href="" class="primary-btn">add to cart</a> -->
                                <a href="#"><button class="primary-btn" disabled> Out of Stock</button></a>
                            </div>
                            <% }else{ %>

                                <a href="/addToCart?id=<%= product._id %>"><button class="primary-btn" onclick="dummy()"> add to cart</button></a>

                                <% } %>
                            <div class="product__details__btns__option">
                                <% if(wishlist){ %>
                                    <a><button class="fa fa-heart" disabled >already in wishlist</button></a>
                                    <% }else{ %>

                                <a href="/addToWishlist?id=<%= product._id %>"><i class="fa fa-heart" onclick="already()"></i> add to wishlist</a>
                                <% } %>
                            </div>
                            <div class="product__details__last__option">
                                <h5><span>Guaranteed Safe Checkout</span></h5>
                                <img src="/userAssets/img/shop-details/details-payment.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shop Details Section End -->

    <!-- Related Section Begin -->
    <section class="related spad">
        <div class="container">
           
        </div>
    </section>

    <script>
        function dummy() {
            Swal.fire({
  position: 'center',
  icon: 'success',
  title: 'Item added to cart',
  showConfirmButton: false,
  timer: 1500
})
        }
    </script>
    <!-- Related Section End -->

    <!-- Footer Section Begin -->
    <%- include("../user/layouts/userfooter") %>